<?xml version="1.0" encoding="ISO-8859-1"?>
<jtlshop3plugin>
	<Name>JTL Google reCaptcha</Name>
	<Description>Implementiert Google reCaptcha als Spamschutzmethode</Description>
	<Author>JTL-Software-GmbH</Author>
	<URL>https://www.jtl-software.de</URL>
	<PluginID>jtl_google_recaptcha</PluginID>
	<XMLVersion>100</XMLVersion>
	<Shop4Version>500</Shop4Version>
	<Install>
		<Version nr="100">
			<CreateDate>2018-05-22</CreateDate>
		</Version>
		<Hooks>
			<Hook id="270">jtl_google_recaptcha_configured.php</Hook>
			<Hook id="271">jtl_google_recaptcha_markup.php</Hook>
			<Hook id="272">jtl_google_recaptcha_validate.php</Hook>
		</Hooks>
		<Adminmenu>
			<Settingslink sort="2">
				<Name>Einstellungen</Name>
				<Setting type="selectbox" initialValue="selectbox" sort="1" conf="Y">
					<Name>jtl_google_recaptcha_type</Name>
					<Description>Wählen Sie die Integrationsart des Google reCAPTCHA. </Description>
					<ValueName>Google reCAPTCHA Integration</ValueName>
					<SelectboxOptions>
						<Option value="checkbox" sort="0">Checkbox</Option>
						<Option value="invisible" sort="1">Unsichtbar</Option>
					</SelectboxOptions>
				</Setting>
				<Setting type="text" initialValue="" sort="2" conf="Y">
					<Name>Google reCAPTCHA Websiteschlüssel</Name>
					<Description>Sie müssen Ihre Domain auf https://www.google.com/recaptcha registrieren. Anschließend erhalten Sie von Google Ihren Website- und Geheimen Schlüssel.</Description>
					<ValueName>jtl_google_recaptcha_sitekey</ValueName>
				</Setting>
				<Setting type="text" initialValue="" sort="3" conf="Y">
					<Name>Google reCAPTCHA Geheimer Schlüssel</Name>
					<Description>Sie müssen Ihre Domain auf https://www.google.com/recaptcha registrieren. Anschließend erhalten Sie von Google Ihren Website- und Geheimen Schlüssel.</Description>
					<ValueName>jtl_google_recaptcha_secretkey</ValueName>
				</Setting>
			</Settingslink>
		</Adminmenu>
	</Install>
</jtlshop3plugin>