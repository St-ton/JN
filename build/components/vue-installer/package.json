{
  "name": "vue-install",
  "version": "1.0.0",
  "description": "A JTL Shop installer",
  "author": "Felix Moche <felix.moche@jtl-software.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "vue-cli-service serve",
    "serve": "vue-cli-service serve",
    "start": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "eslint --ext .js,.vue src"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "bootstrap": "^4.5.2",
    "bootstrap-vue": "^2.16.0",
    "qs": "^6.9.4",
    "vue": "^2.6.12",
    "vue-awesome": "^3.5.4",
    "vue-router": "^3.4.3",
    "vuex": "^3.5.1",
    "vuex-i18n": "^1.13.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.12.1",
    "@vue/cli-plugin-eslint": "^3.12.1",
    "@vue/cli-service": "^3.12.1",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.1.0",
    "cpx": "^1.5.0",
    "eslint": "^6.8.0",
    "eslint-plugin-vue": "^5.2.3",
    "lint-staged": "^9.5.0",
    "rimraf": "^3.0.2",
    "vue-template-compiler": "^2.6.12"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard"
    ],
    "rules": {
      "no-multi-spaces": [
        "error",
        {
          "exceptions": {
            "Property": true,
            "VariableDeclarator": true,
            "ImportDeclaration": true
          }
        }
      ],
      "arrow-parens": 0,
      "space-before-blocks": 2,
      "space-before-function-paren": [
        2,
        "never"
      ],
      "space-in-parens": 2,
      "space-infix-ops": 2,
      "space-unary-ops": 2,
      "spaced-comment": 0,
      "indent": [
        "error",
        4
      ],
      "generator-star-spacing": 0,
      "semi": [
        "error",
        "always"
      ],
      "one-var": [
        "error",
        "consecutive"
      ],
      "operator-linebreak": [
        "error",
        "before"
      ],
      "key-spacing": [
        2,
        {
          "beforeColon": false,
          "afterColon": true,
          "mode": "minimum",
          "align": "value"
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
