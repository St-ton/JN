            "url": "https://gitlab.com/jtl-software/jtl-shop/tools/qrcodegenerator.git"
        },
        {
            "type": "vcs",
            "url": "https://gitlab.com/jtl-software/jtl-shop/tools/sccbs3.git"
        },
        {
            "type": "vcs",
            "url": "https://gitlab.com/jtl-software/jtl-shop/tools/scc.git"
        },
        {
            "type": "vcs",
            "url": "https://gitlab.com/jtl-software/oauth2/client.git"
        }

