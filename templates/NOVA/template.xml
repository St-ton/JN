<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Template isFullResponsive="true">
    <Name>NOVA</Name>
    <Author>JTL-Software-GmbH</Author>
    <URL>https://www.jtl-software.de</URL>
    <Version>0.8</Version>
    <ShopVersion>500</ShopVersion>
    <Preview>preview.png</Preview>
    <Description>JTL-Shop Responsive-Template</Description>
    <Settings>
        <Section Name="Allgemein" Key="general">
            <Setting Description="Komprimierung von JavaScript- und CSS-Dateien" Key="use_minify" Type="select" Value="N">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
            <Setting Description="Komprimierung des HTML-Ausgabedokuments (Achtung - Performancelastig!)" Key="minify_html" Type="select" Value="N">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
            <Setting Description="Komprimierung von Inline-CSS-Code (Achtung - Performancelastig!)" Key="minify_html_css" Type="select" Value="N">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
            <Setting Description="Komprimierung von Inline-JavaScript-Code (Achtung - Performancelastig!)" Key="minify_html_js" Type="select" Value="N">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
            <Setting Description="Aufgabenplaner-Blindgrafik aktivieren?" Key="use_cron" Type="select" Value="Y">
                <Option Value="N">Nein</Option>
                <Option Value="Y">Ja</Option>
            </Setting>
        </Section>
        <Section Name="Theme" Key="theme">
            <Setting Description="Theme" Key="theme_default" Type="select" Value="evo">
                <Option Value="clear">clear - Handgemacht mit <![CDATA[&hearts;]]> von JTL</Option>
            </Setting>
            <Setting Description="Hintergrundbild" Key="background_image" Type="select" Value="">
                <Option Value="">- Kein Hintergrundbild -</Option>
                <Option Value="arktis">Arktis - Berge und Schnee</Option>
                <Option Value="berge">Tal - Ein gr<![CDATA[&uuml;]]>nes Tal</Option>
                <Option Value="buero">B<![CDATA[&uuml;]]>ro - Ein Schreibtisch mit Computer</Option>
                <Option Value="feld">Wiese - Eine gr<![CDATA[&uuml;]]>ne Wiese</Option>
                <Option Value="hoehle">H<![CDATA[&ouml;]]>hle - Warmes Farbenspiel in einer H<![CDATA[&ouml;]]>hle</Option>
                <Option Value="meer-1">Meer 1 - Wolkiger Sonnenuntergang am Meer</Option>
                <Option Value="meer-2">Meer 2 - Sonniger Tag am Meer mit Steg</Option>
                <Option Value="meer-3">Meer 3 - Ein Schauspiel wilder Gezeiten</Option>
                <Option Value="sonnenuntergang-1">Sonnenuntergang 1 - Diesiger Sonnenuntergang an der K<![CDATA[&uuml;]]>ste</Option>
                <Option Value="sonnenuntergang-2">Sonnenuntergang 2 - Warmer Sonnenuntergang am Meer</Option>
                <Option Value="sterne">Sterne - Sternklarer Himmel bei Nacht</Option>
                <Option Value="vulkan">Vulkan - Inaktiver Vulkan in einer Pr<![CDATA[&auml;]]>rie</Option>
                <Option Value="wolken">Wolken - <![CDATA[&Uuml;]]>ber den Wolken...</Option>
                <Option Value="custom">Custom - Ihr eigenes Hintergrundbild (themes/IhrTheme/background.jpg)</Option>
            </Setting>
            <Setting Description="Layout" Key="pagelayout" Type="select" Value="fluid">
                <Option Value="fluid">fluid - Inhalt soll gesamten Bildschirm nutzen</Option>
                <Option Value="boxed">boxed - Der Inhalt hat eine Maximalbreite</Option>
            </Setting>
            <Setting Description="Sliderposition" Key="slider_full_width" Type="select" Value="N">
                <Option Value="N">im Contentbereich</Option>
                <Option Value="Y">zwischen Header und Content</Option>
            </Setting>
            <Setting Description="Bannerposition" Key="banner_full_width" Type="select" Value="N">
                <Option Value="N">im Contentbereich</Option>
                <Option Value="Y">zwischen Header und Content</Option>
            </Setting>
            <Setting Description="Mitlaufendes Header-Megamenü?" Key="static_header" Type="select" Value="N">
                <Option Value="N">Nein</Option>
                <Option Value="Y">Ja</Option>
            </Setting>
            <Setting Description="Hintergrundfarbe" Key="backgroundcolor" Type="colorpicker" Value="#eee"/>
            <Setting Description="Favicon" Key="favicon" Type="upload" Value="favicon.ico" maxFileSize="123456" showPreview="false" allowedFileExtensions="['ico','png']" accept="image/*" target="themes/base/images/" targetFileName="favicon.ico">
            </Setting>
            <Setting Description="Warenkorb-Mengen-Optionen in Dropdown anzeigen?" Key="qty_modify_dropdown" Type="select" Value="Y">
                <Option Value="N">Nein</Option>
                <Option Value="Y">Ja</Option>
            </Setting>
        </Section>
        <Section Name="Megamenu" Key="megamenu">
            <Setting Description="Kategorien (anstelle einer Kategoriebox / Boxenverwaltung)" Key="show_categories" Type="select" Value="Y">
                <Option Value="Y">Aktiv</Option>
                <Option Value="N">Inaktiv</Option>
            </Setting>
            <Setting Description="Hauptkategorie Infobereich" Key="show_maincategory_info" Type="select" Value="Y">
                <Option Value="Y">Aktiv</Option>
                <Option Value="N">Inaktiv</Option>
            </Setting>
            <Setting Description="Kategoriebilder" Key="show_category_images" Type="select" Value="Y">
                <Option Value="Y">Aktiv</Option>
                <Option Value="N">Inaktiv</Option>
            </Setting>
            <Setting Description="Unterkategorien" Key="show_subcategories" Type="select" Value="Y">
                <Option Value="Y">Aktiv</Option>
                <Option Value="N">Inaktiv</Option>
            </Setting>
            <Setting Description="Seiten der Linkgruppe 'megamenu'" Key="show_pages" Type="select" Value="Y">
                <Option Value="Y">Aktiv</Option>
                <Option Value="N">Inaktiv</Option>
            </Setting>
            <Setting Description="Hersteller-Dropdown" Key="show_manufacturers" Type="select" Value="N">
                <Option Value="Y">Aktiv</Option>
                <Option Value="N">Inaktiv</Option>
            </Setting>
        </Section>
        <Section Name="Listen- und Gallerieansicht" Key="productlist">
            <Setting Description="Hovereffekt für Zusatzinfos (&lt;small&gt;zeigt Details zum Artikel in einer Hover-Box oder per Tap auf Touchdisplays&lt;/small&gt;)" Key="hover_productlist" Type="select" Value="N">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
            <Setting Description="Variationsauswahl anzeigen (&lt;small&gt;Nur in Verbindung mit &quot;Hovereffekt für Zusatzinfos&quot;&lt;/small&gt;" Key="variation_select_productlist" Type="select" Value="N">
                <Option Value="N"><![CDATA[Nein]]></Option>
                <Option Value="1"><![CDATA[max. 1]]></Option>
                <Option Value="2"><![CDATA[max. 2]]></Option>
                <Option Value="3"><![CDATA[max. 3]]></Option>
                <Option Value="5"><![CDATA[max. 5]]></Option>
                <Option Value="9999"><![CDATA[keine Beschr&auml;nkung]]></Option>
            </Setting>
            <Setting Description="Anzahl der möglichen Variationswerte für Radio und Swatches. (&lt;small&gt;Nur in Verbindung mit &quot;Variationsauswahl anzeigen&quot;&lt;/small&gt;)" Key="variation_max_werte_productlist" Type="select" Value="3">
                <Option Value="3"><![CDATA[max. 3]]></Option>
                <Option Value="5"><![CDATA[max. 5]]></Option>
                <Option Value="9"><![CDATA[max. 9]]></Option>
                <Option Value="12"><![CDATA[max. 12]]></Option>
                <Option Value="9999"><![CDATA[keine Beschr&auml;nkung]]></Option>
            </Setting>
            <Setting Description="Quickview für Artikeldetails" Key="quickview_productlist" Type="select" Value="N">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
            <Setting Description="Filteroptionen bei Seitenanruf anzeigen?" Key="initial_display_filter" Type="select" Value="Y">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
        </Section>
        <Section Name="Footer-Einstellungen" Key="footer">
            <Setting Description="Newsletter-Anmeldung im Footer" Key="newsletter_footer" Type="select" Value="N">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
            <Setting Description="Social-Media-Buttons im Footer" Key="socialmedia_footer" Type="select" Value="N">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
            <Setting Description="Facebook-Link" Key="facebook" Type="text" Value=""/>
            <Setting Description="Twitter-Link" Key="twitter" Type="text" Value=""/>
            <Setting Description="GooglePlus-Link" Key="googleplus" Type="text" Value=""/>
            <Setting Description="YouTube-Link" Key="youtube" Type="text" Value=""/>
            <Setting Description="Xing-Link" Key="xing" Type="text" Value=""/>
            <Setting Description="LinkedIn-Link" Key="linkedin" Type="text" Value=""/>
            <Setting Description="Vimeo-Link" Key="vimeo" Type="text" Value=""/>
            <Setting Description="Instagram-Link" Key="instagram" Type="text" Value=""/>
            <Setting Description="Pinterest-Link" Key="pinterest" Type="text" Value=""/>
            <Setting Description="Skype-Link" Key="skype" Type="text" Value=""/>
        </Section>
        <Section Name="Entwickler-Einstellungen" Key="demo">
            <Setting Description="LiveStyler aktivieren? (Bitte ebenfalls das Plugin Evo Theme-Editor aktivieren)" Key="demo_mode" Type="select" Value="N">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
        </Section>
    </Settings>
    <Minify>
        <CSS Name="clear.css">
            <File Path="themes/base/fontawesome/css/all.min.css"/>
            <File Path="themes/clear/clear.css"/>
        </CSS>
        <JS Name="jtl3.js">
            <File Path="js/jquery.backstretch.min.js"/>
            <File Path="js/jquery.lazy.js"/>
            <File Path="js/bootstrap-toolkit.js"/>
            <File Path="js/popper.min.js"/>
            <File Path="js/bootstrap.bundle.min.js"/>
            <File Path="js/bootstrap-select.min.js"/>
            <File Path="js/bootstrap-tabdrop.js"/>
            <File Path="js/eModal.min.js"/>
            <File Path="js/jquery.nivo.slider.pack.js"/>
            <File Path="js/jtl.evo.js"/>
            <File Path="js/spin.js"/>
            <File Path="js/typeahead.bundle.js"/>
            <File Path="js/global.js"/>
            <File Path="js/slick.js"/>
            <File Path="js/jquery.serialize-object.js"/>
            <File Path="js/jtl.io.js"/>
            <File Path="js/jtl.article.js"/>
            <File Path="js/jtl.basket.js"/>
            <File Path="js/wow.min.js"/>
            <File Path="js/parallax.min.js"/>
            <File Path="js/Chart.min.js" DependsOnSettingGroup="CONF_PREISVERLAUF" DependsOnSetting="preisverlauf.preisverlauf_anzeigen" DependsOnSettingValue="Y"/>
            <File Path="js/jqcloud.js"/>
            <File Path="js/bs4-input-spinner.js"/>
        </JS>
    </Minify>
    <Boxes>
        <Container Position="left" Available="1"></Container>
        <Container Position="right" Available="0"></Container>
        <Container Position="top" Available="0"></Container>
        <Container Position="bottom" Available="1"></Container>
    </Boxes>
</Template>
